<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import ru.unn.agile.QuadraticEquation.viewmodel.*?>

<AnchorPane prefHeight="370.0" prefWidth="504.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.unn.agile.QuadraticEquation.view.Solution">
    <fx:define>
        <ViewModel fx:id="viewModel" />
    </fx:define>
    <children>
        <VBox alignment="BOTTOM_RIGHT" layoutX="13.0" layoutY="10.0" prefHeight="200.0" prefWidth="477.0">
            <children>
                <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <TextField fx:id="first" prefHeight="25.0" prefWidth="87.0" />
                        <Label prefHeight="17.0" prefWidth="44.0" text=" x^2 + " />
                        <TextField fx:id="second" prefHeight="25.0" prefWidth="104.0" />
                        <Label text=" x + " />
                        <TextField fx:id="third" prefHeight="25.0" prefWidth="100.0" />
                        <Label prefHeight="17.0" prefWidth="108.0" text=" = 0 " />
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" prefHeight="43.0" prefWidth="477.0">
                    <children>
                        <Label text="Root 1: " />
                        <Label prefHeight="17.0" prefWidth="138.0" text="${viewModel.firstRoot}" />
                        <Separator prefHeight="23.0" prefWidth="49.0" visible="false" />
                        <Label prefHeight="17.0" prefWidth="44.0" text="Root 2: " />
                        <Label fx:id="answ2" prefHeight="17.0" prefWidth="199.0" text="${viewModel.secondRoot}" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" focusTraversable="true" prefHeight="43.0" prefWidth="477.0">
                    <children>
                        <Label text="Status: " />
                        <Label fx:id="lbStatus" prefHeight="17.0" prefWidth="179.0" text="${viewModel.status}" />
                        <Separator prefHeight="23.0" prefWidth="200.0" visible="false" />
                        <Button fx:id="btnSolve" alignment="BOTTOM_CENTER" defaultButton="true" disable="${viewModel.solutionDisabled}" mnemonicParsing="false" prefHeight="25.0" prefWidth="52.0" text="Solve" textAlignment="JUSTIFY" />
                    </children>
                </HBox>
            </children>
        </VBox>
      <TextArea text="${viewModel.logs}" layoutX="16.0" layoutY="210.0" prefHeight="154.0" prefWidth="471.0" />
    </children>
</AnchorPane>
